<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <%= link_to 'Login', new_user_session_path%>
              </div>
              <div class="col-xs-6">
              <%= link_to 'Register', new_user_registration_path, class: 'active'%>
              </div>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: '' }) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <%= f.text_field :name, tabindex: '1',  class: 'form-control', placeholder: 'Name' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email, tabindex: '1', class: 'form-control', placeholder: 'Email Address' %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, tabindex: '2', class: 'form-control', placeholder: 'Password' %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, tabindex: '2', class: 'form-control', placeholder: 'Confirm Password' %>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Register Now", id: "register-submit", tabindex: "4", class: "form-control btn btn-register" %>
                      </div>
                    </div>
                  </div>
                  <%= bootstrap_flash %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
