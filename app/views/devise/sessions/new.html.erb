<div class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <a href="#" class="active" id="login-form-link">Login</a>
              </div>
              <div class="col-xs-6">
                <a href="#" id="register-form-link">Register</a>
              </div>
            </div>
            <hr>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form' }) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <%= f.text_field :email, tabindex: "1", class: "form-control", placeholder: "Email Address", :autofocus => true %>
                    <% if @user.errors[:email].present? %>
                      <%= @user.errors[:email][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, tabindex: "2", class: "form-control", placeholder: 'Password' %>
                    <% if @user.errors[:password].present? %>
                      <%= @user.errors[:password][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Log In", id: "login-submit", tabindex: "4", class: "form-control btn btn-register" %>
                      </div>
                    </div>
                  </div>
                  <%= bootstrap_flash %>
                <% end %>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'register-form' }) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                    <%= f.text_field :name, tabindex: '1',  class: 'form-control', placeholder: 'Name' %>
                    <% if @user.errors[:name].present? %>
                      <%= @user.errors[:naame][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email, tabindex: '1', class: 'form-control', placeholder: 'Email Address' %>
                    <% if @user.errors[:email].present? %>
                      <%= @user.errors[:email][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, tabindex: '2', class: 'form-control', placeholder: 'Password' %>
                    <% if @user.errors[:password].present? %>
                      <%= @user.errors[:password][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, tabindex: '2', class: 'form-control', placeholder: 'Confirm Password' %>
                    <% if @user.errors[:password_confirmation].present? %>
                      <%= @user.errors[:password_confirmation][0] %>
                    <% end %>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Register Now", id: "register-submit", tabindex: "4", class: "form-control btn btn-register" %>
                      </div>
                    </div>
                  </div>
                  <%= bootstrap_flash %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
