<h3>Add Bill</h3>
<%= form_tag('/expenses', class: 'form-horizontal') do %>
<p>With you and</p>
<div class="form-group">
<div class="col-sm-10">
<%= select_tag "group_id", options_from_collection_for_select(current_user.groups, "id", "name"), { class: "form-control" } %>
</div>
</div>
<div class="form-group">
<div class="col-sm-10">
<%= text_area_tag :description, nil, cols: '18', tabindex: '1', placeholder: 'Description', class: "form-control" %>
</div>
</div>
<div class="form-group">
<div class="col-sm-10">
<%= text_field_tag :amount, nil, tabindex: '1', placeholder: 'Amount', class: "form-control" %>
</div>
</div>
<p id='billerrormsg'></p>
<div class="modal-footer">
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<%= submit_tag 'Add', class: 'btn btn-primary' %>
</div>
<% end %>